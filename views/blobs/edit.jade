extends layout

block content

	link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,600,700', rel='stylesheet', type='text/css')
	link(href='css/bootstrap-datetimepicker.min.css', rel='stylesheet')
	link(href='css/flexslider.css', rel='stylesheet')
	link(href='css/templatemo-style.css', rel='stylesheet')

	.container.contactform.center
		h2.text-center.wowload.fadeInUp List of Philippine Emergency Hotlines
		p.text-center.wowload.fadeInUp Please observe the correct format in filling out the form:
		.row.wowload.fadeInLeftBig
			.col-sm-6.col-sm-offset-3.col-xs-12

					form(action='/blobs/#{blob._id}/edit',method='post',name='updateblob',enctype='application/x-www-form-urlencoded')
						p Department: 
								input#inputDepartment(type='text', value='#{blob.department}', name='department')
						p Name: 
								input#inputName(type='text', value='#{blob.name}', name='name')
						p Contact: 
								input#inputContact(type='number', value='#{blob.contact}', name='contact')
						p Description: 
								input#inputDescription(type='text', value='#{blob.description}', name='description')
						p Remarks: 
								input#inputRemarks(type='text', value='#{blob.remarks}', name='remarks')
						p Instructions: 
								input#inputInstructions(type='text', value='#{blob.instructions}', name='instructions')
						p Date and Time: 
								input#inputDob(type='date', value='#{blobdob}', name='dob')
						p 
								input(type='hidden',value='PUT',name='_method')
						button.btn.btn-primary(type="submit")
							i.fa.fa-paper-plane
							|  Update